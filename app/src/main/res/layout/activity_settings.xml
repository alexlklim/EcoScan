<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_fon"
    android:contentDescription="@string/settings"
    tools:context=".activities.SettingsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/ecoscan_settings"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/filter"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/ll_isAllowNonUniqueCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/allow_non_unique_code"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isAllowNonUniqueCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_isCheckLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/check_length"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isCheckLength"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_isAdvancedFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/advanced_filter"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isAdvancedFilter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/admin_configuration"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />


            <LinearLayout
                android:id="@+id/ll_isAllowEditCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/allow_edit_during_scanning"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isAllowEditCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_isAllowEditOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/allow_edit_orders"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isAllowEditOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_isAddGPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/add_location_to_code"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isAddGPS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_isEnableLogging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/enable_logging"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isEnableLogging"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/server_configuration"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/ll_isSentData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/send_data_to_server"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isSendData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_isAutoSynch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/autosynchronization"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isAutoSynch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_configureServer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/set_configureServer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/btnSettings"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/configure_server"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/btnSettings"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="@string/client_configuration"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/set_btn_saveClientConfig"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_save" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_identifier"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/identifier"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/set_identifier"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:width="100dp"
                    android:ems="10"
                    android:hint="@string/_000"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:text=""
                    tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/language"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/set_lang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:contentDescription="@string/label_types" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/data_management"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/ll_isHideSynchData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#60FFFFFF"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/hide_synch_data"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/set_isHideSynchData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout>

            <TextView
                android:id="@+id/set_sendAllData"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/sent_all_data_to_server"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/set_deleteSynchData"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/delete_synch_data"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/set_clearAllData"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/clear_all_data"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_getSetFromServer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_getSettingsFromServer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/get_settings_from_server"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_changeLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_changeLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/change_login"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_changePw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_changePw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/change_password"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_resetSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_resetSettings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/btnSettings"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/reset_settings"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>