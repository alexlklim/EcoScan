<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_fon"
    android:contentDescription="@string/settings"
    tools:context=".activities.SettingsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/ecoscan_settings" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:background="#90FFFFFF"
                android:gravity="center_vertical"
                android:text="@string/filter"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60FFFFFF"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/allow_non_unique_code" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/check_length" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/advanced_filter" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/set_isAllowNonUniqueCode"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:text="" />
                    <CheckBox
                        android:id="@+id/set_isCheckLength"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:text="" />
                    <CheckBox
                        android:id="@+id/set_isAdvancedFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:background="#90FFFFFF"
                android:gravity="center_vertical"
                android:text="@string/admin_configuration"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60FFFFFF"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/allow_edit_during_scanning" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/allow_edit_orders" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/add_location_to_code" />
                    <TextView
                        android:id="@+id/set_clearAllData"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/enable_logging" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/set_isAllowEditCode"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        tools:ignore="DuplicateSpeakableTextCheck" />

                    <CheckBox
                        android:id="@+id/set_isAllowEditOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        tools:ignore="DuplicateSpeakableTextCheck" />

                    <CheckBox
                        android:id="@+id/set_isAddGPS"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        tools:ignore="DuplicateSpeakableTextCheck" />
                    <CheckBox
                        android:id="@+id/set_isEnableLogging"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:background="#90FFFFFF"
                android:gravity="center_vertical"
                android:text="@string/server_configuration"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60FFFFFF"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/send_data_to_server" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/autosynchronization" />
                    <TextView
                        android:id="@+id/set_configureServer"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/configure_server" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/set_isSendData"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="@string/send_data_to_server" />
                    <CheckBox
                        android:id="@+id/set_isAutoSynch"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="@string/autosynchronization" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:background="#90FFFFFF"
                android:gravity="center_vertical"
                android:text="@string/client_configuration"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60FFFFFF"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/identifier" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/language" />

                    <TextView
                        android:id="@+id/set_changeLogin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/change_login" />
                    <TextView
                        android:id="@+id/set_changePw"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/change_password" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/set_identifier"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:width="100dp"
                        android:ems="10"
                        android:inputType="number"
                        android:text=""
                        android:hint="@string/_000"
                        tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize"
                        android:importantForAutofill="no" />
                    <Spinner
                        android:id="@+id/set_lang"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:contentDescription="@string/label_types"
                        android:minHeight="48dp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:background="#90FFFFFF"
                android:gravity="center_vertical"
                android:text="@string/data_management"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60FFFFFF"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/hide_synch_data" />
                    <TextView
                        android:id="@+id/set_sendAllData"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/sent_all_data_to_server" />
                    <TextView
                        android:id="@+id/set_deleteSynchData"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/delete_synch_data" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/clear_all_data" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/set_isHideSynchData"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/set_getSettingsFromServer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:background="#90FFFFFF"
                android:gravity="center_vertical"
                android:text="@string/get_settings_from_server"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/set_resetSettings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:background="#90FFFFFF"
                android:gravity="center_vertical"
                android:text="@string/reset_settings"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>