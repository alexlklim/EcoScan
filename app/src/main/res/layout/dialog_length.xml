<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/simpleText"
            android:text="Code length" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/simpleText"
            android:text="MIN length" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/simpleText"
            android:text="MAX length" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/set_length"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:ems="10"
            style="@style/simpleEditText"
            android:hint="@string/_000"
            android:inputType="number"
            android:text="" />
        <EditText
            android:id="@+id/set_lengthMin"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:ems="10"
            style="@style/simpleEditText"
            android:hint="@string/_000"
            android:inputType="number"
            android:text="" />
        <EditText
            android:id="@+id/set_lengthMax"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            style="@style/simpleEditText"
            android:ems="10"
            android:hint="@string/_000"
            android:inputType="number"
            android:text="" />

    </LinearLayout>
</LinearLayout>
    <Button
        android:id="@+id/set_btn_length"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:minWidth="150dp"
        android:text="Apply"
        style="@style/btnSettings"
        android:layout_height="wrap_content" />

</LinearLayout>